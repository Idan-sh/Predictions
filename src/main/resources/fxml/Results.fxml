<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.idansh.javafx.controllers.ResultsController">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" HBox.hgrow="ALWAYS">
         <content>
            <TableView fx:id="executionListTableView" onContextMenuRequested="#selectTableItem" onMouseClicked="#selectTableItem">
              <columns>
                <TableColumn fx:id="idTableColumn" minWidth="20.0" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="endTableColumn" minWidth="40.0" prefWidth="140.0" text="End" />
                  <TableColumn fx:id="statusTableColumn" minWidth="50.0" prefWidth="100.0" text="Status" />
              </columns>
            </TableView>
         </content>
      </ScrollPane>
      <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" HBox.hgrow="ALWAYS">
         <content>
            <VBox />
         </content>
      </ScrollPane>
   </children>
</HBox>
