<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.idansh.javafx.controllers.DetailsController">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" HBox.hgrow="ALWAYS">
         <content>
            <TreeView fx:id="breakdownTreeView" onContextMenuRequested="#selectItem" onMouseClicked="#selectItem" showRoot="false" />
         </content>
      </ScrollPane>
      <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" HBox.hgrow="ALWAYS">
         <content>
            <TreeView fx:id="detailsTreeView" showRoot="false" />
         </content>
      </ScrollPane>
   </children>
</HBox>
